rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
             request.auth.token.admin == true;
    }

    // Historical Figures Collection
    // - Anyone can READ (public discovery)
    // - Only backend/admins can WRITE (prevent vandalism)
    match /historical_figures/{figureId} {
      allow read: if true;  // Public read access for discovery
      allow create, update, delete: if isAdmin();
    }

    // User Profiles (optional - for future use)
    // Users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // User Saved Figures (optional - for future use)
    // Users can save figures to their personal collection
    match /users/{userId}/saved_figures/{figureId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Search History (optional - for analytics/personalization)
    match /users/{userId}/searches/{searchId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // User Searches - Top-level collection for search history
    // Users can only read/write their own searches
    match /user_searches/{searchId} {
      allow read, write: if isAuthenticated() &&
                           resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() &&
                       request.resource.data.user_id == request.auth.uid;
    }

    // Search Cache - Global search cache (30-day TTL)
    // All users can READ (cache benefits everyone)
    // Only backend/admins can WRITE (prevent tampering)
    match /search_cache/{cacheKey} {
      allow read: if true;  // Public read access for cache hits
      allow create, update, delete: if isAdmin();  // Only backend writes
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
